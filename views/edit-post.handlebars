<article class="col outline rounded-4">
    <a href="/dashboard"> &larr; <span id="back">Back to</span> My Posts</a>
    <h2 class="post-title text-center my-3 rounded p-2 px-4">
        Edit Post
    </h2>
    <form class="edit-post-form">
        <div>
            <label for="post-title">Song Title:</label>
            <input name="post-title" type="text" value="{{post.title}}"/>
            <label class="form-label" for="atrist">Artist</label>
            <input name="artist" type="text" value="{{post.artist}}"/>
            <label class="form-label" for="post_content">Content</label>
            <input name="post-content" id="emojionearea1" type="text" value="{{post.post_content}}"/></input>
        </div>
        <div>
            {{!-- reaction counts here --}}
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <button type="submit">Save Post</button>
        <button type="button" class="delete-post-btn">Delete Post</button>
    </form>
    <form class="comment-form mt-3">
    <div>
        <textarea name="comment-body" class="form-control"></textarea>
    </div>
    
{{> comments post.comments}}

    <div>
        <button type="submit">Add Comment</button>
    </div>
</form>
</article>




<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>
